@model Takim

@{
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/takim.css" />
}

<div class="takim-container">
    <h1 class="takim-title">Takım Düzenle</h1>
    <form asp-action="Edit" method="post" class="takim-form">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Ad">🏟️ Takım Adı</label>
            <input asp-for="Ad" class="form-control" required autocomplete="off" />
        </div>
        <div class="form-group">
            <label for="LigId">🥇 Lig Seçin</label>
            <select asp-for="LigId" class="form-control" required>
                <option value="">Lig seçiniz</option>
                @foreach (var lig in ViewBag.Ligler as List<Lig>)
                {
                    <option value="@lig.Id" selected="@(lig.Id == Model.LigId ? "selected" : null)">@lig.Ad</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="@Url.Action("Index", "Takim")" class="btn btn-danger">İptal</a>
    </form>
</div>