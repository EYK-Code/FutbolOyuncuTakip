@model FutbolOyuncuTakip.UI.ViewModels.LoginViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="login-bg">
    <div class="login-card">
        <h1 class="login-title">Giriş Yap</h1>
        <p class="login-desc">
            Sisteme erişmek için lütfen kullanıcı adı ve şifrenizi girin.
        </p>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form asp-action="Login" method="post" class="login-form">
            <div class="form-group">
                <label for="KullaniciAdi"><span class="login-icon">👤</span> Kullanıcı Adı</label>
                <input asp-for="KullaniciAdi" class="form-control" required autocomplete="username" />
            </div>
            <div class="form-group">
                <label for="Sifre"><span class="login-icon">🔒</span> Şifre</label>
                <input asp-for="Sifre" class="form-control" type="password" required autocomplete="current-password" />
            </div>
            <button type="submit" class="btn btn-login">Giriş Yap</button>
        </form>
    </div>
</div>