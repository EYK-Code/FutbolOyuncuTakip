@model Lig

@{
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/lig.css" />
}

<div class="lig-container">
    <h1 class="lig-title">Lig Düzenle</h1>
    <form asp-action="Edit" method="post" class="lig-form">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Ad">🏆 Lig Adı</label>
            <input asp-for="Ad" class="form-control" required autocomplete="off" />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="@Url.Action("Index", "Lig")" class="btn btn-danger">İptal</a>
    </form>
</div>